# Enable RewriteEngine
RewriteEngine On

# Specific redirects for old URLs that have changed paths
Redirect 301 /legal/privacy-policy /privacy
Redirect 301 /legal/terms-and-conditions /terms

# Handle clean URLs - serve .html files without extension
# If the request doesn't have a file extension and the .html version exists, serve it
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]

# Handle trailing slashes - redirect to non-trailing slash version
# This catches all URLs with trailing slashes (including those indexed by Google)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} (.+)/$
RewriteRule ^ %1 [R=301,L]

# Custom error pages
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html

# Security headers
<IfModule mod_headers.c>
  Header always set X-Frame-Options "DENY"
  Header always set X-Content-Type-Options "nosniff"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
  Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"

  # Content-Security-Policy for HTML files
  <FilesMatch "\.(html|htm)$">
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' https://leafjessicaroy.kit.com https://f.convertkit.com 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' https://f.convertkit.com data:; connect-src 'self' https://leafjessicaroy.kit.com https://app.kit.com; frame-src https://leafjessicaroy.kit.com; frame-ancestors 'none'; base-uri 'self'; form-action 'self' https://leafjessicaroy.kit.com https://app.kit.com; upgrade-insecure-requests"
  </FilesMatch>
</IfModule>

# Enable compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/json
</IfModule>

# Cache static assets
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Fonts - cache for 1 year
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  
  # Images - cache for 1 year
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  
  # CSS and JS - cache for 1 year (Astro uses hashed filenames)
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  
  # HTML - short cache
  ExpiresByType text/html "access plus 1 hour"
</IfModule>
