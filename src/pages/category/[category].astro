---
import { getCollection } from 'astro:content';
import { format, parseISO } from 'date-fns';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const allPosts = await getCollection('posts');
  const publishedPosts = allPosts.filter((post) => post.data.published !== false);

  const categories = new Set<string>();
  publishedPosts.forEach((post) => {
    post.data.categories?.forEach((category) => categories.add(category));
  });

  return Array.from(categories).map((category) => {
    const categoryPosts = publishedPosts
      .filter((post) => post.data.categories?.includes(category))
      .sort((a, b) => parseISO(b.data.date).getTime() - parseISO(a.data.date).getTime());

    return {
      params: { category },
      props: { category, posts: categoryPosts },
    };
  });
}

const { category, posts } = Astro.props;

function getPostUrl(post: any) {
  const date = parseISO(post.data.date);
  const year = format(date, 'yyyy');
  const month = format(date, 'MM');
  const day = format(date, 'dd');
  return `/${year}/${month}/${day}/${post.slug}`;
}
---

<Layout
  title={`Posts in ${category}`}
  description={`All posts in the ${category} category on Beyond Writing Code.`}
>
  <div class="category-page">
    <h1 class="page-title">
      Posts in <span class="category-name">{category}</span>
    </h1>

    <div class="posts-list">
      {
        posts.map((post) => {
          const date = parseISO(post.data.date);
          const formattedDate = format(date, 'MMMM d, yyyy');

          return (
            <article class="post-card">
              {post.data.featuredImage && (
                <a href={getPostUrl(post)} class="post-image-link">
                  <img
                    src={post.data.featuredImage}
                    alt={post.data.title}
                    class="post-image"
                    loading="lazy"
                  />
                </a>
              )}
              <div class="post-card-content">
                <h2 class="post-card-title">
                  <a href={getPostUrl(post)}>{post.data.title}</a>
                </h2>
                <time class="post-date" datetime={post.data.date}>
                  {formattedDate}
                </time>
                <p class="post-excerpt">{post.data.excerpt}</p>
              </div>
            </article>
          );
        })
      }
    </div>

    <div class="back-link">
      <a href="/posts">‚Üê Back to all posts</a>
    </div>
  </div>
</Layout>

<style>
  .category-page {
    max-width: var(--content-max-width);
    margin: 0 auto;
    padding: var(--spacing-lg) 0;
  }

  .category-name {
    color: var(--color-accent-teal);
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xl);
  }

  .post-card {
    border-bottom: 1px solid #e0e0e0;
    padding-bottom: var(--spacing-lg);
  }

  .post-card:last-child {
    border-bottom: none;
  }

  .post-image-link {
    display: block;
    margin-bottom: var(--spacing-md);
  }

  .post-image {
    width: 100%;
    height: auto;
    border-radius: 8px;
    transition: opacity 0.2s;
  }

  .post-image-link:hover .post-image {
    opacity: 0.9;
  }

  .post-card-title {
    font-size: 1.75rem;
    font-weight: 600;
    margin-bottom: var(--spacing-sm);
    line-height: 1.3;
  }

  .post-card-title a {
    color: var(--color-text);
    text-decoration: none;
    transition: color 0.2s;
  }

  .post-card-title a:hover {
    color: var(--color-accent-teal);
  }

  .post-date {
    display: block;
    font-family: var(--font-sans);
    font-size: 0.9rem;
    color: var(--color-gray);
    margin-bottom: var(--spacing-sm);
  }

  .post-excerpt {
    color: var(--color-gray);
    line-height: 1.5;
  }

  .back-link {
    margin-top: var(--spacing-xl);
    text-align: center;
  }

  .back-link a {
    color: var(--color-accent-teal);
    text-decoration: none;
    font-family: var(--font-sans);
  }

  .back-link a:hover {
    text-decoration: underline;
  }
</style>
