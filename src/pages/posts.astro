---
import { getCollection } from 'astro:content';
import { format } from 'date-fns';
import Layout from '../layouts/Layout.astro';

const allPosts = await getCollection('posts');
const publishedPosts = allPosts
  .filter((post) => post.data.published !== false)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

function getPostUrl(post: any) {
  const date = new Date(post.data.date);
  const year = format(date, 'yyyy');
  const month = format(date, 'MM');
  const day = format(date, 'dd');
  return `/${year}/${month}/${day}/${post.slug}`;
}
---

<Layout
  title="Posts"
  description="Weekly reflections on working better and happier in tech. Essays on career growth, communication, and life lessons from beyond the code."
>
  <div class="posts-page">
    <h1 class="page-title">Posts</h1>

    <div class="posts-list">
      {
        publishedPosts.map((post) => {
          const date = new Date(post.data.date);
          const formattedDate = format(date, 'MMMM d, yyyy');

          return (
            <article class="post-card">
              {post.data.featuredImage && (
                <a href={getPostUrl(post)} class="post-image-link">
                  <img
                    src={post.data.featuredImage}
                    alt={post.data.title}
                    class="post-image"
                    loading="lazy"
                  />
                </a>
              )}
              <div class="post-card-content">
                <h2 class="post-card-title">
                  <a href={getPostUrl(post)}>{post.data.title}</a>
                </h2>
                <time class="post-date" datetime={post.data.date}>
                  {formattedDate}
                </time>
                {post.data.categories && post.data.categories.length > 0 && (
                  <div class="post-categories">
                    {post.data.categories.map((category) => (
                      <a href={`/category/${category}`} class="category">
                        {category}
                      </a>
                    ))}
                  </div>
                )}
                <p class="post-excerpt">{post.data.excerpt}</p>
              </div>
            </article>
          );
        })
      }
    </div>
  </div>
</Layout>

<style>
  .posts-page {
    max-width: var(--content-max-width);
    margin: 0 auto;
    padding: var(--spacing-lg) 0;
  }

  .page-title {
    font-size: clamp(2rem, 3vw, 2.5rem);
    font-weight: 700;
    margin-bottom: var(--spacing-xl);
    text-align: center;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xl);
  }

  .post-card {
    border-bottom: 1px solid #e0e0e0;
    padding-bottom: var(--spacing-lg);
  }

  .post-card:last-child {
    border-bottom: none;
  }

  .post-image-link {
    display: block;
    margin-bottom: var(--spacing-md);
  }

  .post-image {
    width: 100%;
    height: auto;
    border-radius: 8px;
    transition: opacity 0.2s;
  }

  .post-image-link:hover .post-image {
    opacity: 0.9;
  }

  .post-card-title {
    font-size: 1.75rem;
    font-weight: 600;
    margin-bottom: var(--spacing-sm);
    line-height: 1.3;
  }

  .post-card-title a {
    color: var(--color-text);
    text-decoration: none;
    transition: color 0.2s;
  }

  .post-card-title a:hover {
    color: var(--color-accent-teal);
  }

  .post-date {
    display: block;
    font-family: var(--font-sans);
    font-size: 0.9rem;
    color: var(--color-gray);
    margin-bottom: var(--spacing-sm);
  }

  .post-categories {
    display: flex;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-sm);
    flex-wrap: wrap;
  }

  .category {
    display: inline-block;
    padding: 0.3rem 0.8rem;
    background-color: var(--color-accent-teal);
    color: white;
    border-radius: 20px;
    font-family: var(--font-sans);
    font-size: 0.85rem;
    text-decoration: none;
    transition: background-color 0.2s;
  }

  .category:hover {
    background-color: var(--color-accent-green);
  }

  .post-excerpt {
    color: var(--color-gray);
    line-height: 1.5;
  }
</style>
