---
import { format, parseISO } from 'date-fns';
import { getPostUrl } from '../utils/post-url';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'posts'>;
  showCategories?: boolean;
}

const { post, showCategories = false } = Astro.props;
const date = parseISO(post.data.date);
const formattedDate = format(date, 'MMMM d, yyyy');
const postUrl = getPostUrl(post);
---

<article class="post-card">
  {
    post.data.featuredImage && (
      <a href={postUrl} class="post-image-link">
        <img
          src={post.data.featuredImage}
          alt={post.data.title}
          class="post-image"
          loading="lazy"
        />
      </a>
    )
  }
  <div class="post-card-content">
    <h2 class="post-card-title">
      <a href={postUrl}>{post.data.title}</a>
    </h2>
    <time class="post-date" datetime={post.data.date}>
      {formattedDate}
    </time>
    {
      showCategories && post.data.categories && post.data.categories.length > 0 && (
        <div class="post-categories">
          {post.data.categories.map((category) => (
            <a href={`/category/${category}`} class="category">
              {category}
            </a>
          ))}
        </div>
      )
    }
    <p class="post-excerpt">{post.data.excerpt}</p>
  </div>
</article>

<style>
  .post-card {
    border-bottom: 1px solid #e0e0e0;
    padding-bottom: var(--spacing-lg);
  }

  .post-card:last-child {
    border-bottom: none;
  }

  .post-image-link {
    display: block;
    margin-bottom: var(--spacing-md);
  }

  .post-image {
    width: 100%;
    height: auto;
    border-radius: 8px;
    transition: opacity 0.2s;
  }

  .post-image-link:hover .post-image {
    opacity: 0.9;
  }

  .post-card-title {
    font-size: 1.75rem;
    font-weight: 600;
    margin-bottom: var(--spacing-sm);
    line-height: 1.3;
  }

  .post-card-title a {
    color: var(--color-text);
    text-decoration: none;
    transition: color 0.2s;
  }

  .post-card-title a:hover {
    color: var(--color-accent-teal);
  }

  .post-date {
    display: block;
    font-family: var(--font-sans);
    font-size: 0.9rem;
    color: var(--color-gray);
    margin-bottom: var(--spacing-sm);
  }

  .post-excerpt {
    color: var(--color-gray);
    line-height: 1.5;
  }

  .post-categories {
    display: flex;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-sm);
    flex-wrap: wrap;
  }

  .category {
    display: inline-block;
    padding: 0.3rem 0.8rem;
    background-color: var(--color-accent-teal);
    color: white;
    border-radius: 20px;
    font-family: var(--font-sans);
    font-size: 0.85rem;
    text-decoration: none;
    transition: background-color 0.2s;
  }

  .category:hover {
    background-color: var(--color-accent-green);
  }
</style>
